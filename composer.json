{
    "require": {
        "doctrine/orm": "^2.11",
        "doctrine/cache": "^2.1",
        "symfony/cache": "^5.4"
    },

    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^2.2"
    },

    "autoload": {
        "psr-4": {
            "Empresa\\Fonte\\": "src/"
        },

        "classmap": [
            "tests/"
        ],

        "files": [
        ]
    },

    "scripts": {
        "tests": "phpunit --testdox tests/",
        "resolve": "phpcbf --colors --standard=PSR2 -n src/",
        "fora_padrao": "phpcs --colors --standard=PSR2 -n src/",
        
        "check": [
            "@tests",
            "@fora_padrao",
            "@resolve"
        ]
    }
    
}
